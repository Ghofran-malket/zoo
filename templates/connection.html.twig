{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        #carouselExampleRide {
            display: none;
        }
        #intro {
            position: relative;
            bottom: 0;
            right: 0;
            top: 0;
            left:0;
            background-image: url("images/connection2.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
        }
        .centered-card{
            margin-top:200px;
            border-radius:25px;
            margin-left:10vw;
            margin-right:10vw;
        }
    </style>
{% endblock %}

{% block body %}

    <div id="intro">
        <div class="container text-start px-5 py-5">

            <div class="card bg-light p-5 centered-card">
                <form action="{{ path('login') }}" method="post">
                    <div class="mb-3">
                        <label for="usernameInput" class="form-label text-primary">username</label>
                        <input type="email" name="_username" class="form-control" id="usernameInput" placeholder="username" value="{{ last_username }}" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="passwordInput" class="form-label text-primary">Password</label>
                        <input type="password" class="form-control" id="passwordInput" placeholder="password"  name="_password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </form>

                 {% if error %}
                    <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

