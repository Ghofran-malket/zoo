{% extends 'base.html.twig' %}

{% block body %}

<div class="container text-start px-5 py-5">
        <div>
            <h3 class="text-primary text-center">Create Health report for the {{ report.animal.name }} </h3>
        </div>
        <div class="card bg-dark my-4 p-5" style="border-radius:25px;">

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        
                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.state, 'State', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                        {{ form_widget(form.state, {'attr': {
                            'class': 'form-control', 
                            'id': 'stateInput', 
                            'placeholder': 'state',
                            'type': 'text',
                        }}) }}
                                    
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.food, 'Food', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                        {{ form_widget(form.food, {'attr': {
                            'class': 'form-control', 
                            'id': 'foodInput', 
                            'placeholder': 'food',
                            'type': 'text',
                        }}) }}
                                    
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.food_weight, 'foodWeight', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                        {{ form_widget(form.food_weight, {'attr': {
                            'class': 'form-control', 
                            'id': 'foodWeightInput', 
                            'placeholder': 'foodWeight',
                            'type': 'text',
                        }}) }}
                                    
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.additional_info, 'Additional info', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                            {{ form_widget(form.additional_info, {'attr': {
                                'class': 'form-control', 
                                'id': 'additionalInfoInput', 
                                'aria-label': 'additionalInfo',
                                'placeholder': 'additionalInfo',
                                'style': 'height:100px'
                            }}) }}
                                    
                    </div>
                </div>
                <div class="mb-3 row justify-content-end">
                    <div class="col-lg-1 col-sm-12 mb-2 text-center">
                        <button type="submit" class="btn color-rose text-white">Save</button>
                    </div>
                </div>
            {{ form_end(form) }}

            {# <a href="{{ path('app_services_show') }}" class="btn btn-secondary">Back to list</a> #}
        </div>
    </div>
   

    {# <a href="{{ path('service_index') }}" class="btn btn-secondary">Back to list</a> #}
{% endblock %}