{% extends 'base.html.twig' %}

{% block body %}

    <div class="container text-start px-5 py-5">
        <div>
            <h3 class="text-primary text-center">Edit Habitat</h3>
        </div>
        <div class="card bg-dark my-4 p-5" style="border-radius:25px;">

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        
                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                        {{ form_widget(form.name, {'attr': {
                            'class': 'form-control', 
                            'id': 'nameInput', 
                            'placeholder': 'name',
                            'type': 'text',
                        }}) }}
                                    
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.images, 'images', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                        {{ form_widget(form.images, {'attr': {
                            'class': 'form-control', 
                            'id': 'imagesInput', 
                            'placeholder': 'images',
                            'type': 'text',
                        }}) }}
                                    
                    </div>
                </div>
                
                <div class="mb-3 row">
                    <div class="col-lg-3 col-sm-12 mb-2">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label text-light'}}) }}
                    </div>
                    <div class="col-lg-9 col-sm-12 mb-2">
                            {{ form_widget(form.description, {'attr': {
                                'class': 'form-control', 
                                'id': 'descInput', 
                                'aria-label': 'Description',
                                'placeholder': 'description',
                                'style': 'height:100px'
                            }}) }}
                                    
                    </div>
                </div>
                <div class="mb-3 row justify-content-end">
                    <div class="col-lg-2 col-sm-12 mb-2 text-center">
                        <a href="{{ path('app_habitats_show') }}" class="btn btn-secondary text-white">Back to list</a>
                    </div>
                    <div class="col-lg-1 col-sm-12 mb-2 text-center">
                        <button type="submit" class="btn color-rose text-white">Update</button>
                    </div>
                </div>
            {{ form_end(form) }}

        </div>
    </div>
    
{% endblock %}
